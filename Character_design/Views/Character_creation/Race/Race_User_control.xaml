                           TextWrapping="Wrap" 
                           FontSize="14" 
                           Height="20" 
                           Margin="7"
                           Text="Выносливость"/>
                <TextBlock Grid.Row="5" 
                           Grid.Column="0" 
                           TextWrapping="Wrap" 
                           FontSize="14" 
                           Height="20" 
                           Margin="7"
