                               Canvas.Left="136" 
                               Height="15" 
                               Width="15" 
                               Text="+2" />

                    <TextBlock Canvas.Top="0" 
                               Canvas.Left="188" 
                               Height="15" 
                               Width="15" 
                               Text="+4" />
                    <ProgressBar Canvas.Top="17"
                                 Height="10" 
                                 Width="198"
                                 Maximum="4"
                                 Minimum="-4"
                                 Foreground="Green"
                                 Value="{Binding Selected_race_strength_bonus}">
