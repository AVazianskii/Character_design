<UserControl x:Class="Character_design.Views.Character_creation.Race.Race_User_control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="860" d:DesignWidth="1146">
    <Grid Background="White">
        <Canvas HorizontalAlignment="Left" 
                Height="860" 
                VerticalAlignment="Center" 
                Width="250" 
                Background="Black">
            <TextBlock Height="36" 
                       Canvas.Left="10" 
                       TextWrapping="Wrap" 
                       Text="Выберите расу:" 
                       Canvas.Top="10" 
                       Width="230"
                       Foreground="Wheat" 
                       FontSize="20" 
                       TextAlignment="Center"/>
            <ListBox Grid.Column="0" 
                     Height="814" 
                     Canvas.Top="46" 
                     Width="250" 
                     Background="Black"
                     BorderThickness="0" 
                     ItemsSource="{Binding Races}"
                     SelectedItem="{Binding Selected_race}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Image Grid.Column="0" 
                                   Grid.Row="0" 
                                   Height="50" 
                                   Width="52" 
                                   Source="{Binding Path=Small_img_path}"/>
                            <TextBlock Grid.Column="1" 
                                       Grid.Row="0" 
                                       Height="26" 
                                       TextWrapping="Wrap" 
                                       Width="147" 
                                       Foreground="Wheat" 
                                       TextAlignment="Center"
                                       FontSize="16" 
                                       Text="{Binding Path=Race_name}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Canvas>
        <Image HorizontalAlignment="Left" 
               Height="496" 
               Margin="262,6,0,0" 
               VerticalAlignment="Top" 
               Width="371"
               Source="{Binding Selected_race_full_img_path}"/>
        <TextBlock HorizontalAlignment="Left" 
                   Height="55" 
                   Margin="645,10,0,0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Width="485"
                   TextAlignment="Center" 
                   FontSize="27"
                   Text="{Binding Selected_race_name}"/>

        <ScrollViewer Margin="645,50,16,354" CanContentScroll="True" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" 
                           Grid.Row="0"
                           HorizontalAlignment="Left" 
                           Height="34" 
                           Margin="5,15,0,0" 
                           TextWrapping="Wrap" 
                           Text="Описание расы:" 
                           VerticalAlignment="Top" 
                           Width="365"
                           FontSize="18"/>
                <TextBlock Grid.Column="0" 
                           Grid.Row="1"  
                           TextWrapping="Wrap" 
                           FontSize="14"
                           Margin="10,10,10,10"
                           Text="{Binding Selected_race_description}" />
                <TextBlock Grid.Column="0" 
                           Grid.Row="2"
                           HorizontalAlignment="Left" 
                           Height="34" 
                           Margin="5,15,0,0" 
                           TextWrapping="Wrap" 
                           Text="Персональные данные:" 
                           VerticalAlignment="Top" 
                           Width="365"
                           FontSize="18"/>
                <TextBlock Grid.Column="0" 
                           Grid.Row="3"  
                           TextWrapping="Wrap" 
                           FontSize="14"
                           Margin="10,10,10,10"
                           Text="{Binding Selected_race_personal_data}" />
                <TextBlock Grid.Column="0" 
                           Grid.Row="4"
                           HorizontalAlignment="Left" 
                           Height="34" 
                           Margin="5,15,0,0" 
                           TextWrapping="Wrap" 
                           Text="Физические данные:" 
                           VerticalAlignment="Top" 
                           Width="365"
                           FontSize="18"/>
                <TextBlock Grid.Column="0" 
                           Grid.Row="5"  
                           TextWrapping="Wrap" 
                           FontSize="14" 
                           Margin="10,10,10,10"
                           Text="{Binding Selected_race_physical_data}" />
                <TextBlock Grid.Column="0" 
                           Grid.Row="6"
                           HorizontalAlignment="Left" 
                           Height="34" 
                           Margin="5,15,0,0" 
                           TextWrapping="Wrap" 
                           Text="Родной мир:" 
                           VerticalAlignment="Top" 
                           Width="365"
                           FontSize="18"/>
                <TextBlock Grid.Column="0" 
                           Grid.Row="7"  
                           TextWrapping="Wrap" 
                           FontSize="14" 
                           Margin="10,10,10,10"
                           Text="{Binding Selected_race_home_world}" />
            </Grid>
        </ScrollViewer>
