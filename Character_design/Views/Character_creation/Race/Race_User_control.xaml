        </Canvas>
        <Canvas HorizontalAlignment="Left" 
                Height="220" 
                Margin="659,519,0,0" 
                VerticalAlignment="Top" 
                Width="471">
            <TextBlock Canvas.Left="0" 
                       Canvas.Top="245" 
                       Width="471" 
                       Height="30"
                       TextWrapping="Wrap" 
                       FontSize="18"
                       Foreground="Green"
                       TextAlignment="Center"
                       Text="{Binding Race_choose_advice}"/>
            <TextBlock Grid.Row="0" 
                       Grid.Column="0" 
                       TextWrapping="Wrap" 
                       Height="25"
                       FontSize="16" 
                       Margin="7,0,160,8"
                       Text="Расовые бонусы:" />
            <ScrollViewer CanContentScroll="True" 
                          VerticalScrollBarVisibility="Auto" 
                          Width="465" 
                          Height="220" 
                          Canvas.Top="25">
                <Grid  Height="auto" 
                       Width="465" 
                       Margin="0,0,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" 
                               Grid.Column="0" 
                               TextWrapping="Wrap"
                               Width="430"
                               FontSize="14" 
                               Margin="10,10,10,10"
                               Text="{Binding Selected_race_feature_list}"/>
                </Grid>
            </ScrollViewer>
