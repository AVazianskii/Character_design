        <Border BorderBrush="Black" 
                BorderThickness="0,1,0,0" 
                Margin="250,511,0,0"/>
        <Border BorderBrush="Black" 
                BorderThickness="1,0,0,0" 
                Margin="652,511,0,0">
        </Border>
        <Canvas Margin="659,794,16,10">
            <Button Content="Отменить выбор" 
                    Height="36" 
                    Canvas.Left="10" 
                    Canvas.Top="10" 
                    Width="203"
                    FontSize="17" 
                    Background="Red" 
                    Foreground="White"
                    Command="{Binding Unchoose_race}"/>
            <Button Content="Выбрать расу" 
                    Height="36" 
                    Canvas.Right="10" 
                    Canvas.Top="10" 
                    Width="203"
                    FontSize="17" 
                    Background="Green" 
                    Foreground="White"
                    Command="{Binding Choose_race}"/>
        </Canvas>
        



